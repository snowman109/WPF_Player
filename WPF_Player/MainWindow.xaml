        <Label x:Name="date" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseDoubleClick="Grid_MainTitle_MouseDown" FontSize="20" HorizontalAlignment="Left" Margin="82,67,0,0" VerticalAlignment="Top" Width="112" Height="32" Content="2019-3-13"/>
