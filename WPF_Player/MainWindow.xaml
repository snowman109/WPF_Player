        <Rectangle x:Name="back" Opacity="0.3" Fill="#000000" HorizontalAlignment="Left" Height="204" VerticalAlignment="Top" Width="316"
				   MouseLeftButtonDown="Window_MouseLeftButtonDown" Margin="-4,-3,0,-19"/>
