        <ComboBox Style="{StaticResource ComboBoxStyle}" IsEditable="False" IsReadOnly="True" x:Name="listBox" Opacity="0.3" HorizontalAlignment="Left" Margin="10,142,0,0" Width="188" SelectionChanged="listBox_MouseDoubleClick" VerticalAlignment="Top" Height="24"/>
        <Button Style="{StaticResource buttonPrevious}" Opacity="0.3" Background="#2d2e30" Margin="123,172,166,-13"  x:Name="btn_Previous" Click="btn_Previous_Click"/>
        <Button Style="{StaticResource buttonPlay}" Opacity="0.3" Background="#2d2e30" Margin="196,172,93,-13" x:Name="btn_Play" Click="btn_Play_Click"/>
        <Button Style="{StaticResource buttonNext}" Opacity="0.3" Background="#2d2e30" Margin="269,172,20,-13" x:Name="btn_Next" Click="btn_Next_Click"/>
        <Label  x:Name="lable" FontSize="10" VerticalAlignment="Center" Opacity="0.5" Foreground="WhiteSmoke" Margin="205,147,4,11" Height="24"/>
        <Label x:Name="Download" HorizontalContentAlignment="Center" Content="↓ 344.55KB/s" Opacity="0.5" FontSize="10" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="50,178,0,-25" VerticalAlignment="Top" Height="29" Width="73"/>
        <Label x:Name="Upload" HorizontalContentAlignment="Center" Content="↑ 22.55MB/s" Opacity="0.5" FontSize="10" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="7,163,0,-10" VerticalAlignment="Top" Height="29" Width="76"/>

    </Grid>
</Window>
