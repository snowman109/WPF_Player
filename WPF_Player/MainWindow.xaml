        <Label x:Name="word4" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseDoubleClick="Grid_MainTitle_MouseDown" MouseEnter="Word4_MouseEnter" MouseLeave="Word4_MouseLeave" FontSize="12" Foreground="Blue" Content="Four" HorizontalAlignment="Left" Margin="204,73,-10,0" VerticalAlignment="Top" Height="23" Width="118"/>
        <Label x:Name="word5" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseDoubleClick="Grid_MainTitle_MouseDown" MouseEnter="Word5_MouseEnter" MouseLeave="Word5_MouseLeave" FontSize="12" Foreground="Blue" Content="Five" HorizontalAlignment="Left" Margin="204,96,-10,0" VerticalAlignment="Top" Height="23" Width="118"/>
        <Label x:Name="word6" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseDoubleClick="Grid_MainTitle_MouseDown" MouseEnter="Word6_MouseEnter" MouseLeave="Word6_MouseLeave" FontSize="12" Foreground="Blue" Content="Six" HorizontalAlignment="Left" Margin="204,119,-10,0" VerticalAlignment="Top" Height="23" Width="118"/>
